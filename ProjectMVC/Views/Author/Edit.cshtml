@using ProjectMVC.ViewModel

@model AuthorWithDeptWithGender
@{
    SelectList genOption = new SelectList(Model.Genders, Model.Genders);
}
<form asp-action="SaveEdit" asp-controller="Author" asp-route-id="@Model.Id">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form  form-control" />
    </div>
    <div>
        <label asp-for="DOB"></label>
        <input asp-for="DOB" class="form  form-control" />
    </div>
    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" class="form  form-control" />
    </div>
    <div>
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form  form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Gender"></label>
        <select asp-for="Gender" class="form-control"
                asp-items=@genOption>
        </select>
    </div>

    <div>
        <label asp-for="DepartmentId"></label>
        <select class="form  form-control" Name="DepartmentId" id="DepartmentId">
        @foreach(var deptItem in Model.Dept)
        {
            if(Model.DepartmentId == deptItem.Id)
            {
                <option value="@deptItem.Id" selected>@deptItem.Name</option>
            }
            else
            {
                <option value="@deptItem.Id">@deptItem.Name</option>

            }
        }
        </select>
    </div>
    <input type="submit" value=" Save" class="btn btn-outline-info" />
</form>
<a class="btn btn-primary" asp-action="Index" asp-controller="Author">Back To List</a>
