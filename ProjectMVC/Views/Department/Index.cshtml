

@model List<Department>

<h1 style="color:lightblue">Department Section</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">latest Date Of Creation</th>
            <th scope="col">No.Author(In DB)</th>
            <th scope="col">No.Articals(In DB)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table-active">
                <td>@item.Name</td>
                <td>@item.DateOfCreation?.ToShortDateString()</td>
                <td>@(item.Authors?.Count ??0)</td>
                <td>@(item.Articals?.Count ??0)</td>
                <td><a class="btn btn-outline-danger" href="/Department/Delete/@item.Id">Delete</a></td>

            </tr>
        }

    </tbody>
</table>

