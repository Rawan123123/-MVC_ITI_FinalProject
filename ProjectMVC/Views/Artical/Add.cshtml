@using ProjectMVC.ViewModel

@model AtricalImagesDeptsViewModel

<h2>Add Article</h2>

<form asp-action="SaveAdd" asp-controller="Artical" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ImgURL"></label>
        <input asp-for="ImgURL" class="form-control" placeholder="Enter image URL(1/2.jpg)" />
    </div>

    <div class="form-group">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="@(new SelectList(Model.Dept, "Id", "Name"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="TopicId"></label>
        <select asp-for="TopicId" asp-items="@(new SelectList(Model.topic, "Id", "Name"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="AuthorId"></label>
        <select asp-for="AuthorId" asp-items="@(new SelectList(Model.authoer, "Id", "Name"))" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-outline-secondary">Save</button>

</form>
